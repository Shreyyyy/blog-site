<html>
    <%- include('./partials/header.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>

    <div class="blogs content">
        <h2>All blogs</h2>
        <%if(blogs.length){ %>
            <% blogs.forEach(blog => { %>
            <h3 class="title"><%=blog.title%></h3> 
            <p class="description"><%=blog.description%></p>   
        <% });%>
        <%} else {%>
            <p>No blogs to display</p>
        <%}%>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>
</html>